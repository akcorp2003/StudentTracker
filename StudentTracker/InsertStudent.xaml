<Window x:Class="StudentTracker.InsertStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentTracker"
        mc:Ignorable="d"
        Title="InsertStudent" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Student Name:" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Email Address:" HorizontalAlignment="Left" Margin="11,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="student_name" HorizontalAlignment="Left" Height="23" Margin="10,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="email_address" HorizontalAlignment="Left" Height="23" Margin="11,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SignIn" Content="Sign In!" HorizontalAlignment="Left" Margin="11,182,0,0" VerticalAlignment="Top" Width="75" Click="SignIn_Click"/>

    </Grid>
</Window>
